{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "declaration": true,
    "noEmit": false,
    "lib": ["esnext", "DOM"],
    "outDir": "build"
  },
  "include": ["src/**/*.ts"]
}
